{
    "tasks": [
        {
            "type": "shell",
            "label": "[Windows] Clean workspace",
            "command": "${workspaceFolder}/.vscode/clean_noConfirm.bat",
            "isBackground": true,
            "args": [
                "${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "[ArchLinux] Clean workspace",
            "command": "${workspaceFolder}/.vscode/clean_noConfirm.sh",
            "isBackground": true,
            "args": [
                "${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "[ArchLinux] [Release] Run program",
            "command": "${fileDirname}/exe_${fileBasenameNoExtension}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "args": [],
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "[ArchLinux] C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-g",
                "${fileBasenameNoExtension}.cpp",
                "-o",
                "${fileDirname}/exe_${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "cppbuild",
            "label": "[ArchLinux] [Release Build] [C/C++]: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-O1",
                "${fileBasenameNoExtension}.cpp",
                "-o",
                "${fileDirname}/exe_${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "cppbuild",
            "label": "[ArchLinux] [Debug Build] [C/C++]: g++ build active file with debug info",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-lstdc++",
                "-std=c++17",
                "-g",
                "${fileBasenameNoExtension}.cpp",
                "-o",
                "${fileDirname}/exe_${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "cmake",
            "label": "[CMake] CMake: configure",
            "command": "configure",
            "preset": "MinGW configure",
            "presentation": {
                "reveal": "silent",
            }
        },
        {
            "type": "cmake",
            "label": "[CMake] CMake: build",
            "command": "build",
            "preset": "MinGW build",
            "presentation": {
                "reveal": "silent",
            },
            "dependsOn": [
                "[CMake] CMake: configure",
            ],
        },
        {
            "type": "cmake",
            "label": "[CMake] CMake: clean rebuild",
            "command": "cleanRebuild",
            "preset": "MinGW build",
            "dependsOn": [
                "[CMake] CMake: configure",
            ],
            "presentation": {
                "reveal": "silent",
            },
        },
    ],
    "version": "2.0.0"
}