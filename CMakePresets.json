{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "MinGW Release",
            "displayName": "MinGW Release",
            "hidden": false,
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "MinGW Debug",
            "displayName": "MinGW Debug",
            "hidden": false,
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "MinGW Build Debug",
            "displayName": "MinGW Build Debug",
            "hidden": false,
            "configurePreset": "MinGW Debug"
        },
        {
            "name": "MinGW Build Release",
            "displayName": "MinGW Build Release",
            "hidden": false,
            "configurePreset": "MinGW Release"
        }
    ],
    "testPresets": [
        {
            "name": "MinGW Test",
            "configurePreset": "MinGW Release",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ],
    "packagePresets": [
        {
            "name": "MinGW package",
            "configurePreset": "MinGW Release",
            "generators": [
                "ZIP"
            ]
        }
    ],
    "workflowPresets": [
        {
            "name": "MinGW workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "MinGW Release"
                },
                {
                    "type": "build",
                    "name": "MinGW build"
                },
                {
                    "type": "test",
                    "name": "MinGW test"
                },
                {
                    "type": "package",
                    "name": "MinGW package"
                }
            ]
        }
    ],
    "vendor": {
        "example.com/ExampleIDE/1.0": {
            "autoFormat": false
        }
    }
}